@addTagHelper *, LazZiya.TagHelpers
@using TanpooshStore.Application.Services.Finances.Queries.GetAdminRequestPay.Dto
@model AdminRequestPayPaginationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        فاکتورها
        <small>لیست</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-paperclip"></i> خانه</a></li>
        <li><a href="#">فاکتورها</a></li>
        <li class="active">لیست</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">لیست فاکتورها</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="شناسه فاکتور : activate to sort column descending" aria-sort="ascending" style="width: 182.225px;">شناسه فاکتور</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="مبلغ : activate to sort column ascending" style="width: 340.788px;">مبلغ</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="کاربر : activate to sort column ascending" style="width: 327.375px;">کاربر</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="وضعیت پرداخت : activate to sort column ascending" style="width: 327.375px;">وضعیت پرداخت</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="تاریخ پرداخت : activate to sort column ascending" style="width: 327.375px;">تاریخ پرداخت</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="RefId : activate to sort column ascending" style="width: 327.375px;">RefId</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Authority : activate to sort column ascending" style="width: 327.375px;">Authority</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model.RequestPay)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.Id</td>
                                                    <td>@item.Amount.ToString("n0")</td>
                                                    <td>@item.UserName</td>
                                                    <td>@item.IsPaid</td>
                                                    <td>@item.PayDate</td>
                                                    <td>@item.RefId</td>
                                                    <td>@item.Authority</td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th rowspan="1" colspan="1">شناسه سفارش</th>
                                            <th rowspan="1" colspan="1">زمان ثبت</th>
                                            <th rowspan="1" colspan="1">شناسه فاکتور</th>
                                            <th rowspan="1" colspan="1">وضعیت سفارش</th>
                                            <th rowspan="1" colspan="1">تعداد محصول</th>
                                            <th rowspan="1" colspan="1"></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="col-sm-7">
                            <paging class="row" total-records="Model.RowCount"
                                    page-no="Model.Page"
                                    page-size="Model.PageSize"
                                    show-prev-next="true"
                                    show-total-pages="false"
                                    show-total-records="false"
                                    show-page-size-nav="true"
                                    show-first-last="true"
                                    query-string-key-page-no="page"
                                    query-string-key-page-size="pageSize">
                            </paging>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>